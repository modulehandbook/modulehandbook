<% content_for(:title, "Edit Comment")%>


<%= form_with(model: @comment, local: true) do |form| %>
  <% if @comment.errors.any? %>
    <div class="form-group" id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :author_id, value: @comment.author_id %>

  <%= form.hidden_field :commentable_id, value: @comment.commentable_id %>
  <%= form.hidden_field :commentable_type, value: @comment.commentable_type %>


  <div class="form-group">
    <%= form.text_area :comment, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit  class: "btn btn-success btn-sm" %>
  </div>

<% end %>
